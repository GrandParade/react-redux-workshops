# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,jsx}]
charset = utf-8
indent_style = space
indent_size = 4

# Set default charset
[*.{css,scss}]
charset = utf-8
indent_style = space
indent_size = 2

[*.json]
charset = utf-8
indent_style = space
indent_size = 4
